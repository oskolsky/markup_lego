%header#header.header.__promo{role: "banner"}

  .header_bg
    .header_bg_i{data: {rel: "marvel"}, style: "background-image: url(/assets/images/promo/bg-marvel.png); display: block;"}
    .header_bg_i{data: {rel: "chima"}, style: "background-image: url(/assets/images/promo/bg-chima.png)"}

  .ctn
    = haml 'views/layouts/_header'.to_sym
    .promo.brick
      .promo_i{data: {rel: "marvel"}, style: "display: block;"}
        %a{href: "#"}
          %img{src: "/assets/images/promo/marvel.png", class: "promo_i_img", width: "100%", alt: "Супергерои Lego"}
      .promo_i{data: {rel: "chima"}}
        %a{href: "#"}
          %img{src: "/assets/images/promo/chima.png", class: "promo_i_img", width: "100%", alt: "Подарок королевства Чима"}

%section.promo-slider.__index
  .m-b_1
    = haml 'views/common/_slider_promo'.to_sym
  .tx.__center
    %a{href: "#", class: "share-link"}
      Поделиться с друзьями
      %img{src: "/assets/images/heart.png", alt: ""}

%main#main.main{role: "main"}
  %section.p-t_5.p-b_4{role: "region", "aria-label" => "Catalog"}
    .tabs
      .ctn
        %ul.tabs_list.grid.__no-gutter
          %li.tabs_i.grid-i.__grid-3>
            %a{href: "#tabs-1", class: "tabs_i_a __white"}
              %i.ico.__35.__new
              Наши новинки
          %li.tabs_i.grid-i.__grid-3>
            %a{href: "#tabs-2", class: "tabs_i_a __red"}
              %i.ico.__35.__percent
              Распродажа
          %li.tabs_i.grid-i.__grid-3>
            %a{href: "#tabs-3", class: "tabs_i_a __green"}
              %i.ico.__35.__star
              Эксклюзивы
          %li.tabs_i.grid-i.__grid-3>
            %a{href: "#tabs-4", class: "tabs_i_a __orange"}
              %i.ico.__35.__hellip
              Все серии
        #tabs-1
          .catalog.__product
            .m-b_4
              - 1.upto(4) do
                .grid.catalog_row
                  - 1.upto(4) do
                    .grid-i.__grid-3>
                      = haml 'views/common/_catalog_item'.to_sym
            .catalog_all.beta
              %a{href: "#", class: "tx __minor"}
                Показать все новинки
                %i.fa.fa-chevron-right
        #tabs-2
          .catalog.__product
            .m-b_4
              - 1.upto(4) do
                .grid.catalog_row
                  - 1.upto(4) do
                    .grid-i.__grid-3>
                      = haml 'views/common/_catalog_item'.to_sym
            .catalog_all.beta
              %a{href: "#", class: "tx __minor"}
                Показать все новинки
                %i.fa.fa-chevron-right
        #tabs-3
          .catalog.__product
            .m-b_4
              - 1.upto(4) do
                .grid.catalog_row
                  - 1.upto(4) do
                    .grid-i.__grid-3>
                      = haml 'views/common/_catalog_item'.to_sym
            .catalog_all.beta
              %a{href: "#", class: "tx __minor"}
                Показать все новинки
                %i.fa.fa-chevron-right
        #tabs-4
          .catalog.__product
            .m-b_4
              - 1.upto(4) do
                .grid.catalog_row
                  - 1.upto(4) do
                    .grid-i.__grid-3>
                      = haml 'views/common/_catalog_item'.to_sym
            .catalog_all.beta
              %a{href: "#", class: "tx __minor"}
                Показать все новинки
                %i.fa.fa-chevron-right

  %section.summary.p-t_5.p-b_6{role: "region", "aria-label" => "Summary info"}
    .ctn
      = haml 'views/common/_footer_features'.to_sym
      = haml 'views/common/_footer_summary'.to_sym
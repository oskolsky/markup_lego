                  = haml 'views/catalog/_item'.to_sym
            .catalog_all.beta
              %a{href: "#", class: "tx __minor"}
                Показать все новинки
                %i.fa.fa-chevron-right
        #tabs-4
          .catalog
            .m-b_4
              - 1.upto(12) do
                .grid-i.__grid-3
                  = haml 'views/catalog/_item'.to_sym
            .catalog_all.beta
              %a{href: "#", class: "tx __minor"}
                Показать все новинки
                %i.fa.fa-chevron-right

  %section.summary.p-t_5.p-b_6{role: "region", "aria-label" => "Summary info"}
    .ctn
      = haml 'views/layouts/_summary'.to_sym
%header#header.header.__yellow{role: "banner"}
  .ctn
    = haml 'views/layouts/_header'.to_sym

%main#main.main{role: "main"}

  %section.section.p-t_6.p-b_4{role: "region", "aria-label" => "Catalog"}
    .ctn
      %header.section_header.m-b_2
        %h1.tx.__upper.__minor Каталог LEGO
        %nav.breadcrumbs
          %a{href: "/", class: "breadcrumbs_i"} Главная
          %i.fa.fa-chevron-right
          %span.breadcrumbs_i Каталог
      %section.section_main
        .grid
          .grid-i.__grid-3
            .catalog-filter.__vert
              %form.form
                .m-b_4
                  .form_select.form_el.__fake
                    %p &nbsp;
                    %select.form_select.form_el.__real
                      %option{selected: "selected"} серии
                      %option Серия один
                      %option Серия два
                      %option Серия три
                .m-b_4
                  .form_select.form_el.__fake
                    %p &nbsp;
                    %select.form_select.form_el.__real
                      %option{selected: "selected"} возраст
                      %option 13
                      %option 14
                      %option 15
                .m-b_4
                  .form_select.form_el.__fake
                    %p &nbsp;
                    %select.form_select.form_el.__real
                      %option{selected: "selected"} тема
                      %option Тема один
                      %option Тема два
                      %option Тема три

          .grid-i.__grid-9
            .catalog.m-b_3
              - 1.upto(12) do
                .grid-i.__grid-3
                  = haml 'views/catalog/_item'.to_sym
            %nav.tx.__center
              %ul.pagination.__catalog
                %li.pagination_i
                  %a{href: "#", class: "pagination_i_a __current"} 1
                %li.pagination_i
                  %a{href: "#", class: "pagination_i_a"} 2
                %li.pagination_i
                  %a{href: "#", class: "pagination_i_a"} 3
                %li.pagination_i
                  %a{href: "#", class: "pagination_i_a"} 4
                %li.pagination_i
                  %a{href: "#", class: "pagination_i_a"} 5

  %section.summary.p-t_5.p-b_6{role: "region", "aria-label" => "Summary info"}
    .m-b_6
      = haml 'views/layouts/_slider'.to_sym
    .ctn
      = haml 'views/layouts/_summary'.to_sym
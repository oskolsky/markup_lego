        .slide.brick
          %a{href: "#"}
            %img{src: "/assets/images/fake/img_390_215_02.png", class: "va-t", width: "100%", alt: ""}
        .slide.brick
          %a{href: "#"}
            %img{src: "/assets/images/fake/img_390_215_03.png", class: "va-t", width: "100%", alt: ""}
